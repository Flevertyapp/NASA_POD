<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="NASA_POD" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Без.NoActionBar в имени и правке манифеста на физ. устройстве не работает! -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/rosy_brown</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/purple_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed">true</item>.

    </style>

    <style name="RedTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/FireBrick</item>
        <item name="colorPrimaryVariant">@color/DarkRed</item>
        <item name="colorOnPrimary">@color/LightSalmon</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Salmon</item>
        <item name="colorSecondaryVariant">@color/Red</item>
        <item name="colorOnSecondary">@color/Orange</item>
        <item name="colorSurface">@color/Orange</item>
        <item name="android:colorBackground">@color/Red</item>
    </style>
</resources>